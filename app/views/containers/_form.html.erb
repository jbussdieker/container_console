<%= form_for(@container) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :template %>
    <%= f.select :template, ContainerTemplate.all.collect(&:name), {}, { class: 'form-control' } %>
  </div>

  <%= f.submit nil, class: 'btn btn-primary' %>
  <%= default_button "Cancel", containers_path %>
<% end %>
